<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="E2E Test Suite">
    <listeners>
        <listener class-name="util.ExtentReportListener" />
    </listeners>
    <test name="Smoke Test">
        <parameter name="username" value="ValidUsername" />
        <parameter name="password" value="ValidPassword" />
        <classes>
            <class name="tests.CurrentTempTests" />
            <class name="tests.MoisturizersTest" />
            <class name="tests.SunscreensTest" />
            <class name="tests.CartPaymentTest" />
            <class name="tests.E2ETest" />
        </classes>
    </test>

</suite>